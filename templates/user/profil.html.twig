{% extends 'base.html.twig' %}

{% block title %}Mon compte{% endblock %}


{% block body %}
    <h1 class="text-primary text-center m-5">Mon compte</h1>
    <div class="container-fluid d-flex justify-content-center">
        <div class="card">
            <div class="card-body d-flex align-items-center flex-column">
                <h5 class="card-title text-center mb-4">Mes informations</h5>
                <p class="card-text">
                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-person-circle" fill="currentColor"
                         xmlns="http://www.w3.org/2000/svg">
                        <path d="M13.468 12.37C12.758 11.226 11.195 10 8 10s-4.757 1.225-5.468 2.37A6.987 6.987 0 0 0 8 15a6.987 6.987 0 0 0 5.468-2.63z"/>
                        <path fill-rule="evenodd" d="M8 9a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
                        <path fill-rule="evenodd"
                              d="M8 1a7 7 0 1 0 0 14A7 7 0 0 0 8 1zM0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8z"/>
                    </svg>
                    <span class="font-weight-bold text-primary ">{{ app.user.email }}</span></p>
                <div class="row justify-content-center mt-5">
                    <a href="{{ path('profil_edit')}}"  class="btn btn-primary">Modifier</a>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid d-flex justify-content-center mt-5">
        <div class="card">
            <div class="card-body d-flex align-items-center flex-column">
                <h5 class="card-title text-center mb-4">Mes réservations</h5>
                {% for reservation in reservations %}
                    {% if reservation.email == app.user.email %}
                        <div>
                            <p class="card-text">
                                <span class="font-weight-bold text-primary ">Référence n° {{ reservation.id }}</span>
                            </p>
                            <p>Au nom de : {{ reservation.name }}</p>
                            <p class="text-primary ">Pour le représentation
                                du {{ reservation.representation.date|date('d-m-Y H:i') }}</p>
                            <p>Place en catégorie : {{ reservation.category }}</p>
                            <p>Nombre de place adulte: {{ reservation.nbAdult }}</p>
                            <p>Nombre de place enfant : {{ reservation.nbChild }}</p>
                        </div>
                        <hr/>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
