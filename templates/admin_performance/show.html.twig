{% extends 'base.html.twig' %}

{% block title %}Performance{% endblock %}

{% block body %}
    <h1>Performance</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ performance.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ performance.Name }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ performance.picture }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ performance.description }}</td>
            </tr>
            <tr>
                <th>Focus</th>
                <td>{{ performance.focus ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Video</th>
                <td>{{ performance.video }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ performance.updatedAt ? performance.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('performance_index') }}">back to list</a>

    <a href="{{ path('performance_edit', {'id': performance.id}) }}">edit</a>

    {{ include('admin_performance/_delete_form.html.twig') }}
{% endblock %}
