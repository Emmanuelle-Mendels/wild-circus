{% extends 'base.html.twig' %}

{% block title %}Reservations{% endblock %}

{% block body %}
    <h1 class="text-center text-primary m-5">Nos tarifs</h1>
<table class="table">
    <thead>
    <tr>
        <th>Catégorie</th>
        <th>Type</th>
        <th>Montant</th>
        <th></th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {% for price in prices %}
    <tr>
        <td>{{ price.category }}</td>
        <td>{{ price.type }}</td>
        <td>{{ price.amout }}</td>
    </tr>
    {% endfor %}
    </tbody>
</table>
    <div class="text-center m-5 bg-light">
        <a class="btn btn-lg btn-primary m-5" href="{{ path('app_reservation') }}">Éffectuer une Réservations</a>
    </div>

{% endblock %}
