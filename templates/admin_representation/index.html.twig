{% extends 'base.html.twig' %}

{% block title %}Représentations{% endblock %}

{% block body %}
    <h1 class="text-primary text-center m-5">Représentations</h1>
    <div class="text-right m-5">
        <a class="btn btn-primary" href="{{ path('representation_new') }}">Nouveau</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Heure</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for representation in representations %}
            <tr>
                <td>{{ representation.id }}</td>
                <td>{{ representation.date ? representation.date|date('d-m-Y') : '' }}</td>
                <td>{{ representation.date ? representation.date|date("\\ g:i") : '' }}</td>
                <td>
                    <a href="{{ path('representation_edit', {'id': representation.id}) }}"><svg class="bi bi-pencil-square" width="24px" height="24px" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                        </svg></a>
                </td>
                <td>
                    {{ include('admin_representation/_delete_form.html.twig') }}
            </tr>
        {% else %}
            <tr>
                <td colspan="3">aucune représentation trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
