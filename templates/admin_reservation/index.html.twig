{% extends 'base.html.twig' %}

{% block title %}Reservations{% endblock %}

{% block body %}
    <h1 class="text-center text-primary m-5">Reservations</h1>
<div class="text-right m-5">
    <a class="btn-primary btn" href="{{ path('reservation_new') }}">Nouveau</a>
</div>
    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Email</th>
                <th>Téléphone</th>
                <th>Représentation</th>
                <th>Categorie</th>
                <th>Nb Adultes</th>
                <th>Nb Enfants</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.Name }}</td>
                <td>{{ reservation.email }}</td>
                <td>{{ reservation.phone }}</td>
                <td>{{ reservation.representation.date|date('d-m-Y H:i')}}</td>
                <td>{{ reservation.category }}</td>
                <td>{{ reservation.nbAdult }}</td>
                <td>{{ reservation.nbChild }}</td>
                <td class="align-middle">
                    <a href="{{ path('reservation_edit', {'id': reservation.id}) }}"><svg class="bi bi-pencil-square" width="24px" height="24px" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                        </svg></a>
                </td>
                <td class="align-middle">
                    {{ include('admin_reservation/_delete_form.html.twig') }}
            </tr>

            </tr>
        {% else %}
            <tr>
                <td colspan="8">aucune réservation trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
